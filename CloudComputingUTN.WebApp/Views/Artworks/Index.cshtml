@model CloudComputingUTN.WebApp.Models.ArtworksListViewModel

@{
    ViewData["Title"] = "Artworks";
}
<partial name="_Alert"/>
<h1>Artworks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artworks.FirstOrDefault().ArtworkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artworks.FirstOrDefault().ArtworkYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artworks.FirstOrDefault().ArtworkDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artworks.FirstOrDefault().ArtworkURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artworks.FirstOrDefault().Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Artworks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtworkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtworkYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtworkDescription)
            </td>
            <td>
                <a href="@item.ArtworkURL" target="_blank">Browse</a>
            </td>
            <td>
                <a asp-controller="Artists" asp-action="Details" asp-route-id="@item.ArtistId">@item.Artist.ArtistName</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArtworkId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArtworkId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArtworkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
