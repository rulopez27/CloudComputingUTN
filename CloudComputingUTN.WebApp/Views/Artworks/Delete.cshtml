@model CloudComputingUTN.WebApp.Models.ArtworkViewModel

@{
    ViewData["Title"] = "Delete Artwork";
}
<partial name="_Alert" />
@if (Model.RecordFound)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Artwork</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artwork.ArtworkName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artwork.ArtworkName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artwork.ArtworkYear)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artwork.ArtworkYear)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artwork.ArtworkDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artwork.ArtworkDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artwork.ArtworkURL)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artwork.ArtworkURL)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artwork.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artwork.Artist.ArtistName)
            </dd>
        </dl>
        <form asp-action="DeleteArtwork" asp-route-id="@Model.Artwork.ArtworkId">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
