@model CloudComputingUTN.WebApp.Models.ArtistViewModel

@{
    ViewData["Title"] = "Edit";
}
<partial name="_Alert" />
<h1>Edit</h1>

<h4>Artist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artist.ArtistId" />
            <div class="form-group">
                <label asp-for="Artist.ArtistName" class="control-label"></label>
                <input asp-for="Artist.ArtistName" class="form-control" />
                <span asp-validation-for="Artist.ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.ArtistWikiPage" class="control-label"></label>
                <input asp-for="Artist.ArtistWikiPage" class="form-control" />
                <span asp-validation-for="Artist.ArtistWikiPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
